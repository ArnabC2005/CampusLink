<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">

          <!-- Left: Image -->
          <div class="col-md-4 bg-light">
            <img 
              src="<%=admin.logo%>"
              class="img-fluid h-100 w-100"
              style="object-fit: cover;"
              alt="Admin Image"
            >
          </div>

          <!-- Right: Content -->
          <div class="col-md-8">
            <div class="card-body p-4 h-100 d-flex flex-column justify-content-between">

              <!-- Header -->
              <div>
                <h3 class="card-title fw-semibold mb-2">
                  <%= admin.name %>
                </h3>
                <p class="text-muted mb-3">
                  <i class="bi bi-shield-lock me-1"></i> Admin Dashboard
                </p>

                <hr class="text-muted">

                <!-- Details -->
                <div class="mb-2">
                  <p class="mb-1">
                    <i class="bi bi-envelope-fill text-primary me-2"></i>
                    <strong>Email:</strong> <%= admin.email %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-person-badge text-secondary me-2"></i>
                    <strong>Admin ID:</strong> <%= admin.adminId %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-clock-history text-success me-2"></i>
                    <strong>Created At:</strong> <%= new Date(admin.createdAt).toLocaleDateString() %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-gear-fill text-warning me-2"></i>
                    <strong>Role:</strong> <%= admin.role || 'Super Admin' %>
                  </p>
                </div>
              </div>

              <!-- Manage Button -->
              <div class="mt-4">
                <a href="/api/admin/<%= admin._id %>/dashboard" class="btn btn-outline-primary px-4 py-2">
                  <i class="bi bi-speedometer2 me-1"></i> Go to Dashboard
                </a>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
