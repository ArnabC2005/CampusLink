<div class="container my-5">
  <h2 class="text-center fw-bold mb-4">
    <img src="<%= admin.logo %>" alt="MAHE Logo" 
         class="me-2 rounded-circle border" style="height: 50px; width: 50px; object-fit: cover;">
    CampusLink Dashboard
  </h2>
  <p class="text-center text-muted mb-5">
    Welcome, <strong><%= admin.name %></strong> — here’s an overview of the platform’s current activity.
  </p>

  <div class="row g-4">

    <!-- Total Students -->
    <div class="col-md-4 col-lg-3">
      <div class="card shadow-sm border-0 text-center p-4 rounded-4 h-100">
        <i class="bi bi-people-fill text-primary mb-3" style="font-size: 2.5rem;"></i>
        <h5 class="fw-semibold">Total Students</h5>
        <h3 class="fw-bold text-primary"><%= totalStudents %></h3>
      </div>
    </div>

    <!-- Total Companies -->
    <div class="col-md-4 col-lg-3">
      <div class="card shadow-sm border-0 text-center p-4 rounded-4 h-100">
        <i class="bi bi-building text-success mb-3" style="font-size: 2.5rem;"></i>
        <h5 class="fw-semibold">Total Companies</h5>
        <h3 class="fw-bold text-success"><%= totalCompanies %></h3>
      </div>
    </div>

    <!-- Total Postings -->
    <div class="col-md-4 col-lg-3">
      <div class="card shadow-sm border-0 text-center p-4 rounded-4 h-100">
        <i class="bi bi-briefcase-fill text-info mb-3" style="font-size: 2.5rem;"></i>
        <h5 class="fw-semibold">Total Postings</h5>
        <h3 class="fw-bold text-info"><%= totalPostings %></h3>
      </div>
    </div>

    <!-- Total Applications -->
    <div class="col-md-4 col-lg-3">
      <div class="card shadow-sm border-0 text-center p-4 rounded-4 h-100">
        <i class="bi bi-file-earmark-text-fill text-warning mb-3" style="font-size: 2.5rem;"></i>
        <h5 class="fw-semibold">Total Applications</h5>
        <h3 class="fw-bold text-warning"><%= totalApplications %></h3>
      </div>
    </div>

    <!-- Total Accepted Applications -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm border-0 text-center p-4 rounded-4 h-100">
        <i class="bi bi-check-circle-fill text-success mb-3" style="font-size: 2.5rem;"></i>
        <h5 class="fw-semibold">Total Accepted</h5>
        <h3 class="fw-bold text-success"><%= totalAccepted %></h3>
      </div>
    </div>

    <!-- Average Stipend -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm border-0 text-center p-4 rounded-4 h-100">
        <i class="bi bi-cash-coin text-danger mb-3" style="font-size: 2.5rem;"></i>
        <h5 class="fw-semibold">Average Stipend</h5>
        <h3 class="fw-bold text-danger">₹<%= avgStipend.toFixed(2) %></h3>
      </div>
    </div>

  </div>

  <div class="text-center mt-5">
    <a href="/logout" class="btn btn-outline-secondary px-4">
      <i class="bi bi-box-arrow-right me-1"></i> Logout
    </a>
  </div>
</div>
