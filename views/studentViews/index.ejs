<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">

          <!-- Left: Image -->
          <div class="col-md-4 bg-light">
            <img src="https://img.freepik.com/free-photo/young-woman-attend-courses-girl-student-studying-holding-notebooks-showing-thumb-up-approval-recommending-company-standing-blue-background_1258-70145.jpg?semt=ais_hybrid&w=740&q=80"
                 class="img-fluid h-100 w-100"
                 style="object-fit: cover;"
                 alt="Student Image">
          </div>

          <!-- Right: Content -->
          <div class="col-md-8">
            <div class="card-body p-4 h-100 d-flex flex-column justify-content-between">

              <!-- Header -->
              <div>
                <h3 class="card-title fw-semibold mb-2"><%= student.name %></h3>
                <p class="text-muted mb-3"><i class="bi bi-person-badge me-1"></i> Student Profile</p>

                <hr class="text-muted">

                <!-- Details -->
                <div class="mb-2">
                  <p class="mb-1">
                    <i class="bi bi-envelope-fill text-primary me-2"></i>
                    <strong>Email:</strong> <%= student.email %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-building text-secondary me-2"></i>
                    <strong>College:</strong> <%= student.collegeId %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-mortarboard-fill text-success me-2"></i>
                    <strong>CGPA:</strong> <%= student.cgpa %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-bookmark-fill text-info me-2"></i>
                    <strong>Department:</strong> <%= student.department %>
                  </p>
                  <p class="mb-1">
                    <i class="bi bi-calendar-event-fill text-warning me-2"></i>
                    <strong>Graduation Year:</strong> <%= student.graduation_year %>
                  </p>
                </div>
              </div>

              <!-- Resume Button -->
              <div class="mt-4">
                <a href="<%= student.resume_url %>" target="_blank"
                   class="btn btn-outline-primary px-4 py-2 <%= (!student.resume_url) ? 'disabled' : '' %>">
                  <i class="bi bi-file-earmark-text me-1"></i> View Resume
                </a>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
