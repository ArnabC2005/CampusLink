<div class="container my-5" style="max-width: 800px;">
  <div class="card shadow-lg border-0">
    <div class="card-body p-4">
      
      <!-- <h2 class="card-title mb-1"><%= posting.title %></h2>
      <h5 class="text-muted mb-3">
        <i class="bi bi-building me-1"></i> <%= company.name %>
      </h5> -->
      <div class="d-flex justify-content-between align-items-start mb-2">
      <div>
        <h2 class="card-title mb-1"><%= posting.title %></h2>
        <h5 class="text-muted mb-0">
          <i class="bi bi-building me-1"></i> <%= company.name %>
        </h5>
      </div>

  <div>
    <a href="/api/company/<%= company._id %>/postings/<%= posting._id %>/edit" 
       class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-pencil-square me-1"></i> Edit
    </a>
  </div>
</div>


      <div class="d-flex flex-wrap gap-3 mb-3">
        <span class="badge bg-primary bg-opacity-75"><%= posting.postingType %></span>
        <span class="text-muted">
          <i class="bi bi-geo-alt-fill text-danger me-1"></i> 
          <%= posting.location || 'Not specified' %>
        </span>
      </div>

      <hr>

      <div class="mb-4">
        <h5>Description</h5>
        <p class="text-secondary"><%= posting.description %></p>
      </div>

      <div class="mb-4">
        <h5>Eligibility Criteria</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <strong>Minimum CGPA:</strong> <%= posting.eligibility?.minCgpa %>
          </li>
          <li class="list-group-item">
            <strong>Eligible Departments:</strong> 
            <%= posting.eligibility?.eligibleDepartments?.join(', ') || 'All Departments' %>
          </li>
          <li class="list-group-item">
            <strong>Eligible Years:</strong> 
            <%= posting.eligibility?.eligibleYears?.join(', ') || 'All Years' %>
          </li>
        </ul>
      </div>

      <div class="mb-4">
        <h5>Additional Information</h5>
        <p>
          <strong>Deadline:</strong> 
          <%= posting.deadline ? new Date(posting.deadline).toLocaleDateString() : 'No deadline specified' %>
        </p>
        <p>
          <strong>Stipend:</strong> 
          <%= posting.stipend ? 'â‚¹' + posting.stipend : 'Not specified' %>
        </p>
      </div>

      <div class="text-center mt-4">
        <div class="d-flex justify-content-between">

          <!-- View Applications Button -->
          <a href="/api/company/<%= company._id %>/postings/<%= posting._id %>/applications" class="btn btn-outline-primary">
            <i class="bi bi-people me-1"></i> View Applications
          </a>

          <!-- Upload Test Link Button -->
          <% const testLinkExists = posting.testLink || (applications && applications.some(a => a.testLink)); %>
          <button 
            type="button" 
            class="btn btn-outline-warning" 
            data-bs-toggle="modal" 
            data-bs-target="#uploadTestModal"
            <%= testLinkExists ? 'disabled' : '' %>>
            <i class="bi bi-upload me-1"></i> Upload Test Link
          </button>

          <!-- Delete Opportunity Button -->
          <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="bi bi-trash me-1"></i> Delete Opportunity
          </button>

        </div>
      </div>

    </div>
  </div>
</div>

<!-- Upload Test Link Modal -->
<div class="modal fade" id="uploadTestModal" tabindex="-1" aria-labelledby="uploadTestModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="uploadTestModalLabel">Upload Test Link</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/api/company/<%= company._id %>/postings/<%= posting._id %>/uploadTestLink?_method=PATCH" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="testLink" class="form-label">Test Link</label>
            <input type="url" class="form-control" id="testLink" name="testLink" placeholder="Enter test URL" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">Upload</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Opportunity Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this opportunity? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/api/company/<%= company._id %>/postings/<%= posting._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
